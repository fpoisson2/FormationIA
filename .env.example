# Clé OpenAI utilisée par le backend
OPENAI_API_KEY=sk-votre-cle-ici

# Origines autorisées pour CORS côté backend
FRONTEND_ORIGIN=http://localhost:4173,http://localhost:5173

# Jeton partagé entre frontend et backend pour sécuriser les appels API
API_AUTH_TOKEN=change-me

# URL du backend vue par le navigateur (configuration Vite)
VITE_API_BASE_URL=http://localhost:8001

# URL publique du launch LTI (doit être HTTPS en production)
LTI_LAUNCH_URL=http://localhost:8001/lti/launch

# URL de redirection après launch (frontend)
LTI_POST_LAUNCH_URL=http://localhost:4173/

# Chemins des clés LTI (montez ./lti-keys en volume ou injectez les clés directement)
LTI_PRIVATE_KEY_PATH=/app/lti-keys/lti-private.pem
LTI_PUBLIC_KEY_PATH=/app/lti-keys/lti-public.pem

# Configuration des cookies LTI (adapter en production)
LTI_COOKIE_SECURE=false
LTI_COOKIE_SAMESITE=none

# Configuration du cookie de progression locale
PROGRESS_COOKIE_SECURE=false
PROGRESS_COOKIE_SAMESITE=lax

# Identifiants de connexion pour l’interface (demo)
VITE_LOGIN_USERNAME=test
VITE_LOGIN_PASSWORD=Telecom2025$

# Clé API front (doit correspondre à API_AUTH_TOKEN)
VITE_API_AUTH_KEY=change-me

# Authentification administrateur locale
ADMIN_AUTH_SECRET=change-me-too
ADMIN_SESSION_TTL=3600
ADMIN_SESSION_REMEMBER_TTL=86400
ADMIN_SESSION_COOKIE_NAME=formationia_admin_session
ADMIN_COOKIE_SECURE=false
ADMIN_COOKIE_SAMESITE=lax
